{
    "compilerOptions": {
        "target": "ES6", 
        "module": "commonjs",
        "strict": true, 
        "esModuleInterop": true, 
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true, 
        "outDir": "./dist", 
        "resolveJsonModule": true, 
        "noImplicitAny": true, 
        "strictNullChecks": true,
        "strictFunctionTypes": true, 
        "strictPropertyInitialization": true, 
        "noImplicitThis": true, 
        "alwaysStrict": true 
    },
    "include": ["src/**/*", "tests/**/*"], 
    "exclude": ["node_modules", "dist"] 
}